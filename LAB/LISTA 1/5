// Atividade 5 
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main () {
    int a, b, c, delta = 0;
    float x1, x2;
   printf ("Digite o valor de a:");
    scanf ("% i", & a);
    printf ("Digite o valor de b:");
    scanf ("% i", & b);
	printf ("Digite o valor de c:");
    scanf ("% i", & c);  
	if (a == 0) { 
        printf ("\ nO valor não corresponde a uma equação de segundo grau");
        sistema ("pausa");
        saída (0);
    }
 delta = pow (b, 2) - (4 * a * c); 
    printf ("a:% i \ nb:% i \ nc:% i \ nDelta:% i", a, b, c, delta);
 if (delta <0) { 
        printf ("\ nUma equação não possui valores reais");
        sistema ("pausa");
        saída (0);
    }
 x1 = (-b + sqrt (delta)) / 2 * a; 
    x2 = (-b - sqrt (delta)) / 2 * a; 
     if (delta == 0) { 
  printf ("\ nPossui apenas uma raiz real e% f", x1);
	}
    if (delta> 0) {
    printf ("\ nPossui duas raizes reais que são% fe% f", x1, x2); }
	sistema ("pausa");
retorno (0); }
 